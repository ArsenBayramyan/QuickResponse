@model IEnumerable<QuickResponse.Data.Models.Post>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div id="projects-tab" class="tab-pane active">
    <div class="pd-20">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Post Name</th>
                    <th>Post Type</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Post Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    @if (post.IsDeleted == false)
                    {
                        <tr>
                            <td>@post.PostName </td>
                            <td>@post.PostType</td>
                            <td>@post.Price.ToString("N0")$</td>
                            <td>@post.Body</td>
                            <td class="center">@post.PostDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a class="btn btn-primary" asp-action="CreateOrder" asp-controller="Order" asp-route-id="@post.PostId">Order</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-action="PostView" asp-controller="Post" asp-route-id="@post.PostId">View </a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>

        <div>
            <a href="/Account/AccountPage">Back to account page</a>
        </div>
    </div>
</div>
