@model PostViewModel

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"></div>
        </div>
        <div class="col-md-5 border-right">
            <form asp-action="EditPost" asp-controller="Post" method="post">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Հայտարարության մանրամասներ</h4>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Անունը</label><input readonly type="text" asp-for="Post.PostName" class="form-control"></div>
                        @if (Model.Post.PostType == "ForSale")
                        {
                            <div class="col-md-12"><label class="labels">Տիպը</label><input readonly type="text" value="Վաճառում եմ" disabled class="form-control" di></div>
                        }
                        else
                        {
                            <div class="col-md-12"><label class="labels">Տիպը</label><input readonly type="text" value="Փնտրում եմ" disabled class="form-control" di></div>

                        }
                        <div>
                            <div class="col-md-12"><label class="labels">Օգտատերի անուն</label><input readonly type="text" value="@Model.User.FirstName @Model.User.LastName" disabled class="form-control" di></div>

                            <div class="col-md-12"><label class="labels">Օգտատերի հեռախոսահամար </label><input readonly type="text" asp-for="@Model.User.PhoneNumber" class="form-control"></div>
                            <div class="col-md-12"><label class="labels">Ապրանք</label><input readonly type="text" asp-for="@Model.ProductTypes.Where(t => t.ProductTypeId == @Model.Products.Where(p => p.ProductId == Model.Post.ProductId).FirstOrDefault().ProductTypeId).FirstOrDefault().ProductTypeName" class="form-control"></div>
                            <div class="col-md-12"><label class="labels">Քանակը</label><input readonly asp-for="@Model.Products.Where(p => p.ProductId == Model.Post.ProductId).FirstOrDefault().Count" class="form-control"> </div>
                            <div class="col-md-12"><label class="labels">Չափողականության միավորը</label><input readonly type="text" asp-for="@Model.ProductTypes.Where(t => t.ProductTypeId == @Model.Products.Where(p => p.ProductId == Model.Post.ProductId).FirstOrDefault().ProductTypeId).FirstOrDefault().Dimensionality" class="form-control" /></div>
                            <div class="col-md-12"><label class="labels">Գինը</label><input readonly asp-for="@Model.Post.Price դրամ" class="form-control"> </div>
                            <div class="col-md-12"><label class="labels">Նկարագրությունը</label><textarea readonly asp-for="@Model.Post.Body" class="form-control"></textarea> </div>
                        </div>
                        <div class="text-center" style="margin-top:20px">
                            @Html.ActionLink("<-- Դեպի անձնական Էջ", "AccountPage", "Account")
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('https://www.bootdey.com/img/Content/bg1.jpg');
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #BA68C8
    }

    .profile-button {
        background: rgb(99, 39, 120);
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background: #682773
        }

        .profile-button:focus {
            background: #682773;
            box-shadow: none
        }

        .profile-button:active {
            background: #682773;
            box-shadow: none
        }

    .back:hover {
        color: #682773;
        cursor: pointer
    }

    .labels {
        font-size: 16px
    }

    .add-experience:hover {
        background: #682773;
        color: #fff;
        cursor: pointer;
        border: solid 1px #BA68C8
    }
</style>