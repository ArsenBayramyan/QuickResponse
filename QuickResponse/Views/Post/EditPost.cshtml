@model PostCreateModel
@{
    ViewBag.Title = "Խմբագրել";
}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"></div>
        </div>
        <div class="col-md-5 border-right">
            <form asp-action="EditPost" asp-controller="Post" method="post">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Խմբագրել</h4>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="PostId" style="display:none" value="@Model.PostId" class="form-control" />
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels" asp-for="PostName"></label><input type="text" asp-for="PostName" class="form-control"></div>
                        @if (Model.PostType==QuickResponse.Core.Enums.PostType.ForSale)
                        {
                            <div class="col-md-12"><label class="labels" asp-for="PostType"></label><input type="text" value="Վաճառում եմ" disabled class="form-control" di></div>

                        }
                        else
                        {
                            <div class="col-md-12"><label class="labels" asp-for="PostType"></label><input type="text" value="Փնտրում եմ" disabled class="form-control" di></div>

                        }
                        <div class="col-md-12"><label class="labels" asp-for="ProductTypeId"></label><input type="text" value="@Model.ProductTypes.FirstOrDefault(p=>p.ProductTypeId==Model.ProductTypeId).ProductTypeName" disabled class="form-control" di></div>

                        <div class="col-md-12"><label class="labels" asp-for="Count"></label><input type="text" asp-for="Count" class="form-control" placeholder="count"></div>
                        <div class="col-md-12"><label class="labels" asp-for="Price"></label><input type="text" asp-for="Price" class="form-control" placeholder="price"></div>
                        <div class="col-md-12"><label class="labels" asp-for="Body"></label><textarea asp-for="Body" class="form-control" placeholder="description"></textarea> </div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Պահպանել</button></div>
                    <div class="text-center" style="margin-top:20px">
                        @Html.ActionLink("<-- Դեպի անձնական Էջ", "AccountPage","Account")
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<style>
    body {
        background-image: url('https://www.bootdey.com/img/Content/bg1.jpg');
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #BA68C8
    }

    .profile-button {
        background: rgb(99, 39, 120);
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background: #682773
        }

        .profile-button:focus {
            background: #682773;
            box-shadow: none
        }

        .profile-button:active {
            background: #682773;
            box-shadow: none
        }

    .back:hover {
        color: #682773;
        cursor: pointer
    }

    .labels {
        font-size: 16px
    }

    .add-experience:hover {
        background: #682773;
        color: #fff;
        cursor: pointer;
        border: solid 1px #BA68C8
    }
</style>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
