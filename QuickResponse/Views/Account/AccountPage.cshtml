<div id="logOut">
    <a asp-action="LogOut" asp-controller="Account"  class="btn-btn bg-danger" >Log out</a>
</div>
<body>
    <div class="container main-secction">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 image-section">
                <img src="https://png.pngtree.com/thumb_back/fw800/back_pic/00/08/57/41562ad4a92b16a.jpg">
            </div>
            <div class="row user-left-part">
                <div class="col-md-3 col-sm-3 col-xs-12 user-profil-part pull-left">
                    <div class="row ">
                        <div class="col-md-12 col-md-12-sm-12 col-xs-12 user-image text-center">
                            <img src="https://www.jamf.com/jamf-nation/img/default-avatars/generic-user-purple.png" class="rounded-circle">
                        </div>
                    </div>
                </div>
                <div class="col-md-9 col-sm-9 col-xs-12 pull-right profile-right-section">
                    <div class="row profile-right-section-row">
                        <div class="col-md-12 profile-header">
                            <div class="row">
                                <div class="col-md-8 col-sm-6 col-xs-6 profile-header-section1 pull-left">
                                    <h1>@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h1>
                                    <h5>Developer</h5>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
<div class="col-md-12 col-sm-12 col-xs-12 user-detail-section1 text-center" id="myPosts">
    <button onclick="userPost()" class="btn btn-success btn-block follow">My Posts</button>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 user-detail-section1 text-center" id="myOrders">
    <button onclick="userOrder()" class="btn btn-success btn-block follow">My Orders</button>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 user-detail-section1 text-center" id="ordered">
    <button onclick="ordered(1)" class="btn btn-success btn-block follow">Ordered</button>
</div>




@foreach (var post in Model.Posts)
{
    @if (Model.CurrentUser.Id != post.UserId)
    {
        <div>
            <h3>@post.PostName</h3>
            <h6> @post.PostType</h6>

            <h4>@Model.ProductTypes.Where(t => t.ProductTypeId == @Model.Products.Where(p => p.ProductId == post.ProductId).FirstOrDefault().ProductTypeId).FirstOrDefault().ProductTypeName</h4>

            <h4> @Model.Products.Where(p => p.ProductId == post.ProductId).FirstOrDefault().Count  @Model.ProductTypes.Where(t => t.ProductTypeId == @Model.Products.Where(p => p.ProductId == post.ProductId).FirstOrDefault().ProductTypeId).FirstOrDefault().Dimensionality</h4>
            <h5>@post.Price $</h5>
            @post.Body

        </div>
        <div>
            <a asp-action="CreateOrder" asp-controller="Order" asp-route-id="@post.PostId" class="btn btn-warning">Order</a>
        </div>
    }

}
<br />
<br />
<br />
<form asp-action="CreatePost" asp-controller="Post" method="get">
    <button class="btn btn-success" onclick="userPost()" type="submit">Add Post</button>
</form>
<div page-model="@Model.PagingInfo" page-action="AccountPage"></div>

<script>
    function userPost() {
        window.$.ajax({
            type: "Get",
            url: "/Post/UserPosts",
            success: function (data) {
                $('#myPosts').html(data);
            },
            failure: function (errMsg) {
                alert(errMsg);
            }
        });
    }

    function userOrder() {
        window.$.ajax({
            type: "Get",
            url: "/Order/UserOrders",
            success: function (data) {
                $('#myOrders').html(data);
            },
            failure: function (errMsg) {
                alert(errMsg);
            }
        });
    }

    function ordered(chechk) {
        window.$.ajax({
            type: "Get",
            url: `/Order/UserOrders/?chechk=${chechk}`,
            success: function (data) {
                $('#ordered').html(data);
            },
            failure: function (errMsg) {
                alert(errMsg);
            }
        });
    }

    function logOut() {
        window.$.ajax({
            type: "Get",
            url: "/Account/LogOut",
            success: function (data) {
                $('#myPosts').html(data);
            },
            failure: function (errMsg) {
                alert(errMsg);
            }
        });
    }
</script>

