<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="https://www.jamf.com/jamf-nation/img/default-avatars/generic-user-purple.png"><span class="font-weight-bold">@Model.FirstName @Model.LastName</span><span class="text-black-50">@Model.Email</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Օգտատիրոջ տվյալներ</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels" asp-for="FirstName"></label> <input readonly type="text" asp-for="FirstName" class="form-control"></div>
                        <div class="col-md-6"><label class="labels" asp-for="LastName"></label><input readonly type="text" asp-for="LastName" class="form-control"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels" asp-for="Gender"></label><input readonly type="text" value="@Model.Gender" disabled class="form-control"></div>
                        <div class="col-md-12"><label class="labels" asp-for="Phone"></label><input readonly type="text" asp-for="Phone" class="form-control"></div>
                        <div class="col-md-12"><label class="labels" asp-for="City"></label><input readonly type="text" asp-for="City" class="form-control"></div>
                        <div class="col-md-12"><label class="labels" asp-for="Address"></label><input readonly type="text" asp-for="Address" class="form-control"></div>
                        <div class="col-md-12"><label class="labels" asp-for="Email"></label><input readonly type="text" asp-for="Email" class="form-control"></div>
                    </div>
                    <div class="text-center" style="margin-top:20px">
                        @Html.ActionLink("<-- Դեպի հետ", "AccountPage")
                    </div>
                </div>

        </div>
    </div>
</div>

