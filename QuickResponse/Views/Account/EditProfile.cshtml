@model QuickResponse.Models.ViewModels.UserCreateModel

@{
    ViewData["Title"] = "EditProfile";
}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="https://www.jamf.com/jamf-nation/img/default-avatars/generic-user-purple.png"><span class="font-weight-bold">@Model.FirstName @Model.LastName</span><span class="text-black-50">@Model.Email</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <form asp-action="EditProfile" asp-controller="Account" method="post">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="UserID" style="display:none" value="@Model.UserID" class="form-control" />
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Name</label> <input type="text" asp-for="FirstName" class="form-control" placeholder="name"></div>
                        <div class="col-md-6"><label class="labels">Surname</label><input type="text" asp-for="LastName" class="form-control" placeholder="surname"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Gender</label><input type="text" value="@Model.Gender" disabled class="form-control"></div>
                        <div class="col-md-12"><label class="labels">Phone number</label><input type="text" asp-for="Phone" class="form-control" placeholder="enter phone number"></div>
                        <div class="col-md-12"><label class="labels">City</label><input type="text" asp-for="City" class="form-control" placeholder="city"></div>
                        <div class="col-md-12"><label class="labels">Address</label><input type="text" asp-for="Address" class="form-control" placeholder="enter address"></div>
                        <div class="col-md-12"><label class="labels">Email</label><input type="text" asp-for="Email" class="form-control" placeholder="enter email"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><label class="labels">Password</label><input type="password" asp-for="Password" class="form-control" placeholder="password"></div>
                        <div class="col-md-6"><label class="labels">Confirm Password</label><input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="confirm password"></div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
                    <div class="text-center">
                        @Html.ActionLink("To back", "AccountPage")
                    </div>
                </div>
            </form>
           
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('https://www.bootdey.com/img/Content/bg1.jpg');
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #BA68C8
    }

    .profile-button {
        background: rgb(99, 39, 120);
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background:#682773
        }

        .profile-button:focus {
            background: #682773;
            box-shadow: none
        }

        .profile-button:active {
            background: #682773;
            box-shadow: none
        }

    .back:hover {
        color: #682773;
        cursor: pointer
    }

    .labels {
        font-size: 11px
    }

    .add-experience:hover {
        background: #682773;
        color: #fff;
        cursor: pointer;
        border: solid 1px #BA68C8
    }
</style>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
