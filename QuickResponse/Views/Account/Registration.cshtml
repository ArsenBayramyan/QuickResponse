@model UserCreateModel
@{
    ViewBag.Title = "Registration";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/SignUp.css" />
<div class="main">

    <!-- Sign up form -->
    <section class="signup" style="margin-bottom:45px">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Գրանցվել</h2>
                    <h5>Անձնական տվյալներ</h5>
                    <br />
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form class="register-form" id="register-form" asp-action="Registration" asp-controller="Account" method="post">
                        <div class="form-group">

                            <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
                            <input asp-for="FirstName" placeholder="Անուն" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div><span asp-validation-for="LastName" class="text-danger"></span></div>
                            <input asp-for="LastName" placeholder="Ազգանուն" class="form-control" />
                        </div>
                        <div class="form-group">

                            <div><span asp-validation-for="BirthDate" class="text-danger"></span></div>
                            <input asp-for="BirthDate" class="form-control" />
                        </div>
                        <div class="form-group">

                            <select class="form-control" id="Gender" name="Gender">
                                <option>Ընտրեք սեռը</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <div><span asp-validation-for="City" class="text-danger"></span></div>
                            <input asp-for="City" placeholder="Քաղաք" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div><span asp-validation-for="Address" class="text-danger"></span></div>
                            <input asp-for="Address" placeholder="Հասցե" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div><span asp-validation-for="Phone" class="text-danger"></span></div>
                            <input asp-for="Phone" placeholder="Հեռախոս" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div><span asp-validation-for="Email" class="text-danger"></span></div>
                            <input asp-for="Email" placeholder="Էլ․հասցե" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div><span asp-validation-for="Password" class="text-danger"></span></div>
                            <input asp-for="Password" placeholder="Գաղտնաբառ" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
                            <input asp-for="ConfirmPassword" placeholder="Կրկնեք գաղտնաբառը" class="form-control" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-submit">Գրանցվել</button>
                        </div>
                        <div class="d-flex justify-content links backToLogin mt-2">
                            If you have account?<a href="/Account/Login">Sign In</a>
                        </div>
                    </form>
                </div>
                
                <div class="signup-image">
                    <figure><img src="https://colorlib.com/etc/regform/colorlib-regform-7/images/signup-image.jpg" alt="sing up image"></figure>
                </div>
            </div>
        </div>
    </section>
</div>